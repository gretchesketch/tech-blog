<div class='row'>
  <div class='card'>
    <div class='card-header'>{{blog.title}}</div>
    <div class='card-body'>
      <p class='card-text'>
        {{blog.content}}
      </p>
    </div>
    <div class='card-footer text-muted'>
      Posted by
      {{blog.user.username}}
      on
      {{blog.createdAt}}
    </div>
  </div>
</div>

<div class='row'>
  <form id='comment-form'>
    <textarea id='comment-text-area'></textarea>
    <button id='comment-submit' data-id='{{blog.id}}'>Submit Comment</button>
  </form>
</div>

{{#each blog.Comments as |comment|}}
  <div class='row'>
    <div class='card'>
      <div class='card-body'>
        <p class='card-text'>{{comment.content}}</p>
      </div>
      <div class='card-footer text-muted'>
        Posted by
        {{comment.user.username}}
        on
        {{comment.createdAt}}
      </div>
    </div>
  </div>
{{/each}}
